{

	"manifest_version": 2,

	"name": "SFWify",
	"description": "Block p0rn on Furaffinity",
	"homepage_url": "https://sfwify.akona.me/",
	"version": "0.1",

	"icons": {
		"32": "icon.png"
	},

	"content_scripts": [
		{
			"matches": [
				"*://www.furaffinity.net/*"
			],
			"js": [
				"api.js",
				"submission_checker.js",
				"content.js"
			]
		}
	],

	"permissions": [
		"*://www.furaffinity.net/*",
		"https://cors.kona.workers.dev/*",
		"https://fonts.googleapis.com/*",
		"https://fonts.gstatic.com/*"
	],

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "SFWify",
		"default_popup": "popup.html"
	}

}
